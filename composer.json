{
    "name": "everypay/framework",
    "description": "Everypay's PSR-15 framework",
    "authors": [
        {
            "name": "kmavrofridis",
            "email": "kmavrofridis@everypay.gr"
        }
    ],
    "require": {
        "php": ">=7.4",
        "psr/http-message": "^1.0",
        "psr/http-server-middleware": "^1.0",
        "psr/http-server-handler": "^1.0",
        "nikic/fast-route": "^1.3",
        "psr/container": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Everypay\\Framework\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Everypay\\Framework\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "laminas/laminas-diactoros": "^2.8"
    }
}
